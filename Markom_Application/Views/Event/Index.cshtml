@model Markom_Application.Models.Transaction.RowsEventModel

<div class="col-lg-12">
    <br />
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">@ViewBag.TitleLeft</a></li>
            <li class="breadcrumb-item"><a href="#">@ViewBag.TitleMid</a></li>
            <li class="breadcrumb-item active" aria-current="page" id="titleMutation">@ViewBag.Title</li>
        </ol>
    </nav>
</div>

<div class="row">
    <div class="col-lg-12">
        <br />
        <div class="card oh">
            <div class="card-body">
                <div class="table-responsive text-nowrap mb-1">
                    <div class="alert alert-info alert-dismissible fade" role="alert">
                        <div class="alertText"></div>
                        <button type="button" class="close closeAlert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    @{ Html.RenderPartial("_FilterEvent"); }
                    <table id="table"
                           data-toggle="table"
                           data-pagination="true"
                           data-side-pagination="server"
                           data-page-list="[10, 25, 50]"
                           data-page-size="10"
                           data-url="@Url.Action("GetData", "Event")"
                           data-query-params-type="false"
                           data-buttons-class="primary"
                           data-query-params="queryParamsEvent"
                           class="table table-bordered table-sm table-hover">
                        <thead>
                            <tr>
                                <th class="py-0 text-center" data-field="@Html.DisplayNameFor(m => m.code)">Transaction Code</th>
                                <th class="py-0 text-center" data-field="@Html.DisplayNameFor(m => m.request_by_name)">Request By</th>
                                <th class="py-0 text-center" data-field="@Html.DisplayNameFor(m => m.request_date)">Request Date</th>
                                <th class="py-0 text-center" data-field="@Html.DisplayNameFor(m => m.status)">Status</th>
                                <th class="py-0 text-center" data-field="@Html.DisplayNameFor(m => m.created_date)">Created Date</th>
                                <th class="py-0 text-center" data-field="@Html.DisplayNameFor(m => m.created_by)">Created By</th>
                                <th class="py-0 text-center" data-field="@Html.DisplayNameFor(m => m.event_name)" data-visible="false">Event Name</th>
                                <th class="py-0 text-center" data-field="@Html.DisplayNameFor(m => m.place)" data-visible="false">Event Place</th>
                                <th class="py-0 text-center" data-field="@Html.DisplayNameFor(m => m.start_date)" data-visible="false">Event Start Date</th>
                                <th class="py-0 text-center" data-field="@Html.DisplayNameFor(m => m.end_date)" data-visible="false">Event End Date</th>
                                <th class="py-0 text-center" data-field="@Html.DisplayNameFor(m => m.budget)" data-visible="false">Event Budget</th>
                                <th class="py-0 text-center" data-field="@Html.DisplayNameFor(m => m.note)" data-visible="false">Event Note</th>
                                <th class="py-0 text-center" data-field="@Html.DisplayNameFor(m => m.assign_to)" data-visible="false">Assign To</th>
                                <th class="py-0 text-center" data-field="operate" data-formatter="operateFormatterEvent" data-events="operateEvents">Action</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@{ Html.RenderPartial("_Script"); }
<!-- Modal AddUp -->
<div class="modal fade bd-example-modal-xl" id="ModalAdUp" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id=""></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="form" enctype="multipart/form-data">
                    <div class="form-group row">
                        <label for="" class="col-sm-2 col-form-label text-right">* Transaction Code</label>
                        <div class="col-sm-4">
                            <input type="hidden" class="form-control" id="id" name="id" value="" />
                            <input type="text" class="form-control" id="Transaction_Code_Input" name="Transaction_Code_Input" autocomplete="off" disabled />
                        </div>
                        <label for="" class="col-sm-2 col-form-label text-right">* Request By</label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control" id="Request_By_Input" name="Request_By_Input" autocomplete="off" disabled />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="" class="col-sm-2 col-form-label text-right">* Event Name</label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control" id="Event_Name_Input" name="Event_Name_Input" placeholder="Type Event Name" autocomplete="off" />
                            <p class="errorEventName text-danger d-none"></p>
                        </div>
                        <label for="" class="col-sm-2 col-form-label text-right">* Request Date</label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control" id="Request_Date_Input" name="Request_Date_Input" autocomplete="off" disabled />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="" class="col-sm-2 col-form-label text-right">* Event Place</label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control" id="Event_Place_Input" name="Event_Place_Input" placeholder="Type Event Place" autocomplete="off" />
                            <p class="errorEventPlace text-danger d-none"></p>
                        </div>
                        <label for="" class="col-sm-2 col-form-label text-right">* Event Start Date</label>
                        <div class="col-sm-4">
                            <input type="date" class="form-control datepickerinput" id="Start_Date_Input" name="Start_Date_Input" placeholder="Select Date" autocomplete="off" />
                            <p class="errorStartDate text-danger d-none"></p>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="" class="col-sm-2 col-form-label text-right">* Event Budget (Rp.)</label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control" id="Event_Budget_Input" name="Event_Budget_Input" placeholder="Type Event Budget" autocomplete="off" />
                            <p class="errorEventBudget text-danger d-none"></p>
                        </div>
                        <label for="" class="col-sm-2 col-form-label text-right">* Event End Date</label>
                        <div class="col-sm-4">
                            <input type="date" class="form-control" id="End_Date_Input" name="End_Date_Input" placeholder="Select Date" autocomplete="off" />
                            <p class="errorEndDate text-danger d-none"></p>
                        </div>
                    </div>

                    <div class="form-group row adminFormOnly">
                        <label for="" class="col-sm-2 col-form-label text-right">* Assign To</label>
                        <div class="col-sm-4">
                            <select type="text" class="form-control" id="Assign_To_Input" name="Assign_To_Input" autocomplete="off">
                                <option value="">
                                    - Select Employee -
                                </option>
                            </select>
                            <p class="errorAssignTo text-danger d-none"></p>
                        </div>
                        <label for="" class="col-sm-2 col-form-label text-right">Status</label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control" id="Status_Input" name="Status_Input" autocomplete="off" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="" class="col-sm-2 col-form-label text-right">Note</label>
                        <div class="col-sm-10">
                            <textarea class="form-control" id="Note" name="Note" placeholder="Type Note" rows="5"></textarea>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary cl" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary add" data-request-url="@Url.Action("AddUp", "Event")">Save</button>
                <button type="button" class="btn btn-primary approve" data-request-url="@Url.Action("AddUp", "Event")">Approved</button>
                <button type="button" class="btn btn-primary reject">Rejected</button>
                <button type="button" class="btn btn-primary closeRequest" data-request-url="@Url.Action("AddUp", "Event")">Close Request</button>
                <button class="btn btn-primary addL d-none" type="button" disabled>
                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                    Loading...
                </button>
            </div>

        </div>
    </div>
</div>

<div class="modal fade" id="ModalReject" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Reject @ViewBag.Title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group row">
                    <label for="" class="col-sm-2 col-form-label text-right">Reject Reason</label>
                    <div class="col-sm-10">
                        <textarea class="form-control" id="Reject_Reason" name="Reject_Reason" placeholder="Type Reject Reason" rows="5"></textarea>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary rejectBtn" data-request-url="@Url.Action("AddUp", "Event")">Reject</button>
                <button type="button" class="btn btn-danger cl" data-dismiss="modal">Cancel</button>
                <button class="btn btn-primary deleteL d-none" type="button" disabled>
                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                    Loading...
                </button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="ModalCloseReq" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="exampleModalLabel">Close Request?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary closeReqBtn" data-request-url="@Url.Action("AddUp", "Event")">Close Request</button>
                <button type="button" class="btn btn-danger cl" data-dismiss="modal">Cancel</button>
                <button class="btn btn-primary deleteL d-none" type="button" disabled>
                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                    Loading...
                </button>
            </div>
        </div>
    </div>
</div>


<script type="text/javascript">
    var ViewBag = '@ViewBag.Title';
    var ViewContent = '@ViewBag.TitleLeft';
</script>
<script src="~/Scripts/jsdata/event.js"></script>